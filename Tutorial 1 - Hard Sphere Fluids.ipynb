    "DFT = minimise.DFT(bulk_density=density,\n",
    "                   temperature=1.0,\n",
    "                   fluid_type='HS')\n",
    "\n",
    "# Define slit object\n",
    "slit = minimise.slit(DFT,\n",
    "                     left_wall_type = 'HW',\n",
    "                     right_wall_type = 'HW')\n",
